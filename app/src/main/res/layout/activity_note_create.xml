<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/toolBar"
    tools:context="com.greenapex.callhelper.Activity.NoteCreate">

    <RelativeLayout
        android:id="@+id/RelativeNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolBar"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Add Note"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="@dimen/margin_25dp"
            android:layout_height="@dimen/margin_25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:background="@drawable/ic_close_black_24dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="@dimen/margin_25dp"
            android:layout_height="@dimen/margin_25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10dp"
            android:background="@drawable/ic_check_black_24dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/RelativeNote"
        android:background="@drawable/roundshape">

        <TextView
            android:id="@+id/txtContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="Select Contact:" />

        <TextView
            android:id="@+id/txtSelectContact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40dp"
            android:layout_below="@+id/txtContact"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@drawable/rounded_border_edittext"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_10dp"
            android:textColor="#000"
            android:textSize="@dimen/text_15sp" />

        <Button
            android:id="@+id/btnSelectContact"
            android:layout_width="@dimen/margin_20dp"
            android:layout_height="@dimen/margin_20dp"
            android:layout_alignEnd="@+id/txtSelectContact"
            android:layout_alignRight="@+id/txtSelectContact"
            android:layout_alignTop="@+id/txtSelectContact"
            android:layout_margin="@dimen/margin_10dp"
            android:background="@drawable/contact" />

        <TextView
            android:id="@+id/txtWriteNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSelectContact"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="Write Note:" />

        <EditText
            android:id="@+id/edtWriteNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtWriteNote"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/rounded_border_edittext"
            android:gravity="top"
            android:padding="@dimen/margin_5dp"
            android:inputType="textMultiLine"
            android:maxLength="200"
            android:minLines="3" />

        <TextView
            android:id="@+id/txtNoteLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/edtWriteNote"
            android:layout_marginRight="@dimen/margin_20dp"
            android:text="" />


    </RelativeLayout>

</RelativeLayout>
